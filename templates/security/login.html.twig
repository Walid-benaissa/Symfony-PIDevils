
{% extends '/utilisateur/login.html.twig'%}


{% block body %}
<form action="{{ path('app_login') }}" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

  
    <label for="inputMail">Mail:</label>
    <input type="text" style="margin-top: 10px"; value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus/>
    <label style="margin-top: 10px;" for="inputPassword">Mot de passe:</label>
    <input type="password" style="margin-top: 10px;" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button style="margin-top: 10px;margin-left:30%;" class="btn  btn-primary" type="submit">
Se connecter    </button>
</form>
{% endblock %}
