{% extends 'base-front.html.twig'%}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdContrat</th>
                <td>{{ location.idContrat }}</td>
            </tr>
        
            <tr>
                <th>IdVehicule</th>
                <td>{{ location.idVehicule }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ location.dateDebut ? location.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ location.dateFin ? location.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ location.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'idContrat': location.idContrat}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
