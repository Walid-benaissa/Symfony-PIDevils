{% extends 'base-front.html.twig'%}
{% block body %}

<link href="{{asset("css/form-css.css")}}" rel="stylesheet">
<div class="centerdiv">
<style>
    .card-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }
</style>
<!-- recherche produit par nom-->
<div class="container">	
		<div class="row">
			<div class="col-md-6">
				<form action="{{path('app_recherche_dashboard_par_nom_du_produit')}}" method="POST" name="f">

					<div class="input-group">
						<input type="text" name="etat" class="form-control" placeholder="Rechercher">
						
						<div class="input-group-append">
							<button type="submit" style="border-color: white;background-color: white;border-style: solid;">
								<span class="input-group-text bg-transparent text-primary">
									<i class="fa fa-search"></i>
								</span>

							</button>
						</div>
					</div>

				</form>
			</div>
		</div>
		
		<!-- fin recherche produit par nom-->
		<br>

<div class="row">
<div class="card-grid">

{% for livraison in livraisons %}
  <div class="col-md-4 mb-4">
<div class="card" style="width: 20rem;">
  <div class="card-body">

    <h5 class="card-title text-center  mb-3">{{ livraison.colis.description }}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Adresse Expedition : {{livraison.adresseExpedition}}</h6>
	<p class="card-text mb-2 text-muted">Adresse Destinataire : {{livraison.adresseDestinataire}}</p>
    <p class="card-text mb-2 text-muted ">Prix : {{livraison.prix}} Dinars  </p>
    <p class="card-text mb-2 text-muted ">Etat : {{livraison.etat}}  </p>

     
	<a href="{{ path('app_livraison_edit', {'idLivraison': livraison.idLivraison}) }}"> <i class="fa-solid fa-pen-to-square"></i></a>
  	<a href="{{ path('app_livraison_delete', {'id': livraison.idLivraison}) }}"><i class="fa-solid fa-trash"></i></a>
    <a href="{{ path('app_qr_codes', {'idLivraison': livraison.idLivraison}) }}"><i class="fa-solid fa-qrcode"></i></a>

  </div>
</div>
</div>

{% endfor %}
</div>
</div>
</div>
	{# <a href="{{ path('app_livraison_new') }}">Create new</a> #}
	
  </div>
{% endblock %}