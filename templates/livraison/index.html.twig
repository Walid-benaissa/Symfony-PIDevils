{% extends 'base-back.html.twig'%}
{% block body %}
<h1 class="text-center mt-5 mb-3">Liste des Livraisons</h1>
</br>


	<table class="table">
		<thead>
			<tr>

				<th>Adresse Expedition</th>
				<th>Adresse Destinataire</th>
				<th>Prix</th>
				<th>Etat</th>
				{# <th>actions</th> #}
			</tr>
		</thead>
		<tbody>
			{% for livraison in livraisons %}
				<tr>

					<td>{{ livraison.adresseExpedition }}</td>
					<td>{{ livraison.adresseDestinataire }}</td>
					<td>{{ livraison.prix }}</td>
					<td>{{ livraison.etat }}</td>
					{# <td>
						<a href="{{ path('app_livraison_show', {'idLivraison': livraison.idLivraison}) }}">Show</a>
						<a href="{{ path('app_livraison_edit', {'idLivraison': livraison.idLivraison}) }}">edit</a>
					</td> #}
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Aucune Livraison </td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
