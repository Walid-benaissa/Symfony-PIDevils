{% extends 'base-back.html.twig'%}
{% block body %}
<style>
.form {
  max-width: 620px;
  width: 100%;
  background-color: #fff;
  padding: 20px;
  box-shadow: 0px 0px 0px 4px rgba(52, 52, 53, 0.185);
  display: flex;
  flex-direction: column;
  border-radius: 10px;
}

#form_eval label {
  display: none;
}

.title {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 20px;
  color: #1a202c;
}

.label {
  color: rgb(0, 0, 0);
  margin-bottom: 20px;
}

.textarea {
  width: 100%;
  height: 100px;
}

form select {
  width: 150px;
}


form-check .form-check-input {
    float:right !important;
}
.input:focus {
  background-color: #fff;
  box-shadow: 0 0 0 2px #cbd5e0;
}

.submit {
  background-color: #ffaa24;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
  align-self: center;
  width: 30%;
  margin-top: 10px;
}

.centerdiv {
  display: flex;
  justify-content: center;
  align-items: center;
}

.star-label {
  display: inline-block;
  margin-right: 10px;
}

.star-image:hover {
  cursor: pointer;
}
.div1{
    margin-left:40%;
    width: 20%;
}
</style>
<div class="centerdiv"  style="text-align:center;"> 
    {{ form_start(form,{'attr':{'novalidate': 'novalidate','class': 'form' }})}}
    <h1 class="title">Modifier Utilisateur</h1>
    <h5> Nom : {{utilisateur.nom}}  </h5>
    <h5> Pr√©nom : {{utilisateur.prenom}} </h5>
      <h5> E-mail :{{utilisateur.mail}}  </h5>
     <div class='div1'> 
    {{ form_label(form.role) }}<br>
    {{ form_widget(form.role)}}</div>
    {{ form_errors(form.role)}}<br>   
    <button class="submit">{{ button_label|default('Modifier') }}</button>
	<a href="{{ path('app_utilisateur_index') }}">Retour</a>
    {{ form_end(form) }} <br>   
</div>
<br><br>
{% endblock %}