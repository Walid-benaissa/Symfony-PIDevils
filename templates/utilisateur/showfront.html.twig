{% extends 'base-front.html.twig'%}

{% block body %}
<link href="{{asset("css/cardprofil.css")}}" rel="stylesheet">
		<div class="row">
        <div class="card offset-2 col-8">
        <div class="card-info">
	<h1>Profil</h1>
        <div class="card-avatar"></div>
        <div class="card-title">{{utilisateur.nom ~ " " ~ utilisateur.prenom}}</div>
        <div class="card-subtitle">{{ utilisateur.mail }}</div>
        <div class="card-subtitle">{{ utilisateur.numTel }}</div>
        <div class="card-subtitle">{{ utilisateur.role }}</div>
        <div class="card-subtitle">{{ utilisateur.evaluation }}</div>
	<a class="submit" href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">Modifier</a>
	<a class="submit" href="{{ path('app_utilisateur_changemdp', {'id': utilisateur.id}) }}">Changer mot de passe</a>

        </div>
		</div>
</div>
<br><br>
	
{% endblock %}
